{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "data": {"url": "../data/renewable_by_state.csv"},
  "mark": "bar",
  "encoding": {
    "x": {"field": "State", "type": "nominal", "title": "State"},
    "y": {"aggregate": "sum", "field": "Generation_GWh", "type": "quantitative", "title": "Total Generation (GWh)"},
    "color": {"field": "Energy_Source", "type": "nominal", "title": "Energy Source"},
    "tooltip": [
      {"field": "State"},
      {"field": "Energy_Source"},
      {"aggregate": "sum", "field": "Generation_GWh", "title": "GWh"}
    ]
  }
}
